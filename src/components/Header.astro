---
const heroImg = "/heroImg.jpeg";
---

<header>
  <div class="container">
    <section class="text">
      <div>
        <h1>New Hope<br /><span>Caregivers</span></h1>
        <p>
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Odit,
          laudantium obcaecati? Delectus exercitationem sit expedita.
        </p>
      </div>
    </section>
    <section class="image">
      <div>
        <img src={heroImg} alt="" />
      </div>
    </section>
  </div>
</header>

<style lang="scss">
  header {
    padding-top: 7rem;
    width: 100vw;
    display: grid;
    place-items: center;
    background: -moz-radial-gradient(
      circle,
      rgba(254, 254, 254, 1) 1%,
      rgba(195, 224, 229, 1) 30%,
      rgba(88, 133, 175, 1) 71%,
      rgba(65, 114, 159, 1) 80%,
      rgba(39, 68, 114, 1) 100%
    );
    background: -webkit-radial-gradient(
      circle,
      rgba(254, 254, 254, 1) 1%,
      rgba(195, 224, 229, 1) 30%,
      rgba(88, 133, 175, 1) 71%,
      rgba(65, 114, 159, 1) 80%,
      rgba(39, 68, 114, 1) 100%
    );
    background: radial-gradient(
      circle,
      rgba(254, 254, 254, 1) 1%,
      rgba(195, 224, 229, 1) 30%,
      rgba(88, 133, 175, 1) 71%,
      rgba(65, 114, 159, 1) 80%,
      rgba(39, 68, 114, 1) 100%
    );
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#fefefe",endColorstr="#274472",GradientType=1);

    .container {
      height: auto;
      width: 100%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      // gap: 2.5rem;
      padding: 0 2rem;
      overflow: hidden;

      .image {
        // height: 100%;
        // width: 100%;
        display: grid;
        place-items: center;
        position: relative;
        transform: translate(15%, 28%);

        div {
          width: 350px;
          height: 350px;
          // aspect-ratio: 1 / 1;
          max-width: 100%;
          border-radius: 50%;
          padding: 0.3rem;
          background-color: var(--light);
          // transform: translate(15%, 28%);

          img {
            border-radius: 100%;
            max-width: 100%;
            height: 100%;
            aspect-ratio: 1 / 1;
            object-fit: cover;
            object-position: center;
          }
        }
      }

      .text {
        height: 250px;
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;

        div {
          text-align: center;
          color: var(--primary);

          h1 {
            margin-bottom: 1rem;
            font-size: 2.5rem;
            line-height: 0.8;

            span {
              font-size: 2rem;
            }
          }

          p {
            display: block;
            width: 100%;
            max-width: 40ch;
          }
        }
      }
    }
  }

  @media screen and (min-width: 992px) {
    header {
      .container {
        .image {
          img {
          }
        }

        .text {
          div {
            h1 {
              span {
              }
            }
            p {
            }
          }
        }
      }
    }
  }
</style>

